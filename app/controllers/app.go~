package controllers

import (

	"github.com/robfig/revel"
	"schedule/app/qbsDB"
)

type App struct {
	*revel.Controller
}

func (c App) Index() revel.Result {
	db := qbsDB.DB
	type Days struct {
		Id  int64  `qbs:"pk"`
		Day string `qbs:"size:65536"`
	}
	day := new(Days)
	day.Id = 1
	e := db.Find(day)
	 if e != nil {
		panic(err)
	}
	var days []*Days
    err := db.FindAll(&days)
    if err != nil {
		panic(err)
	}

	return c.Render(day, days)
}
