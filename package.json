{
  "name"       : "rozklad_cdtu",
  "version"    : "0.0.1",
  "description": "Webapp for showing and editing students schedule",
  "main"       : "./web/js/main_common.js",
  "author"     : "Nikolai Shitik",
  "repository": {
    "type": "git",
    "url" : "git://github.com/rtm7777/rozklad_cdtu.git"
  },
  "bugs": {
    "url": "https://github.com/rtm7777/rozklad_cdtu/issues"
  },
  "license": "MIT",

  "scripts": {
    "build"    : "browserify web/js/main_common.js -o public/main.js",
    "build_min": "uglifyjs public/main.js -o public/main.min.js",
    "watch"    : "watchify web/js/main_common.js -v -d -o public/main.js",
    "less"     : "lessc web/less/main.less > public/css/main.css"
  },

  "browserify": {
    "transform": [
      "babelify",
      "jstify"
    ]
  },
  "devDependencies": {
    "jquery"         : "^2.1.3",
    "bootstrap"      : "^3.3.2",
    "babelify"       : "^5.0.3",
    "babel"          : "^4.3.0",
    "react"          : "^0.12.2",
    "less"           : "^2.4.0",
    "browserify"     : "^8.1.3",
    "watchify"       : "^2.3.0",
    "jstify"         : "^0.8.0",
    "underscore"     : "^1.8.1",
    "uglify-js"      : "^2.4.16"
  }
}
